{
    "version": "0.2.0",
    "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Mocha Tests",
      "program": "${workspaceFolder}/node_modules/mocha/bin/_mocha",
      "args": [
        "--require",
        "babel-register",
      ],
      "env": {
          "NODE_ENV":"development"
      },
      "stopOnEntry": false,
      "outFiles": [
          "${workspaceRoot}/Test/**.js"
      ],
      "sourceMaps": true
    }]
}